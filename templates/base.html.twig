<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}SDH Babice{% endblock %}</title>

    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta content="Bootsrap based theme" name="description">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="yes" name="apple-mobile-web-app-capable">

    {# !--[if lt IE 9] #}
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <script src="{{ asset('javascripts/PIE.js') }}"></script>

    <link href="{{ asset('favicon.ico') }}" rel="shortcut icon">

    {# CSS general stylesheets #}
    {% block stylesheets %}
        <link href="{{ asset("stylesheets/bootstrap.css") }}" media="screen" rel="stylesheet" type="text/css"/>
        <link href="{{ asset("stylesheets/responsive.css") }}" media="screen" rel="stylesheet" type="text/css"/>
        <link href="{{ asset("stylesheets/font-awesome-all.css") }}" media="screen" rel="stylesheet" type="text/css"/>
        <link href="{{ asset("stylesheets/fancybox.css") }}" media="screen" rel="stylesheet" type="text/css"/>
        <link href="{{ asset("stylesheets/theme.css") }}" media="screen" rel="stylesheet" type="text/css"/>
        <link href="{{ asset("stylesheets/fonts.css") }}" media="screen" rel="stylesheet" type="text/css"/>
    {% endblock %}
</head>
<body>

<div class="wrapper">
    {# Page header #}
    {% block bodyHeader %}
        {{ include('components/body/header.html.twig') }}
    {% endblock %}

    {# Page notifications/messages #}
    {% block flashMessages %}
        {{ include('components/flashes.html.twig') }}
    {% endblock %}

    <div id="content" role="main">
        {# Page - main content #}
        {% block body %}
        {% endblock %}

        {% block bodyFooter %}
            {# Sponsor companies #}
            {{ include('components/body/footer.html.twig') }}
        {% endblock %}
    </div>

</div>

{# Page - footer #}
{% block footer %}
    <footer id="footer" role="contentinfo">
        {{ include('components/footer.html.twig') }}
    </footer>
{% endblock %}

{# javascripts #}
{% block javascripts %}
    <script src="{{ asset('javascripts/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('javascripts/bootstrap.js') }}" type="text/javascript"></script>
    <script src="{{ asset('javascripts/jquery.flexslider-min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('javascripts/jquery.tweet.js') }}" type="text/javascript"></script>
    <script src="{{ asset('javascripts/jquery.fancybox.pack.js') }}" type="text/javascript"></script>
    <script src="{{ asset('javascripts/jquery.fancybox-media.js') }}" type="text/javascript"></script>
    <script src="{{ asset('javascripts/script.js') }}" type="text/javascript"></script>
{% endblock %}
</body>
</html>
